extends page

include ../modules/browsehappy/browsehappy
include ../modules/mobile-menu/mobile-menu
include ../modules/javascripts/javascripts
include ../modules/head/head
include ../modules/scroll-top/scroll-top


block page
	.page__mobile-menu(data-offcanvas-menu aria-hidden="true")
		+mobile-menu(mainMenu.default)

	.page__content
		.page__wrapper
			.page__header
				block header

			.page__main
				block main

		.page__footer
			block footer
	
	.page__overlay(data-offcanvas-overlay)

	+scroll-top()





.embed
	position relative
	display block
	height 0
	padding 0
	overflow hidden

	iframe
	embed
	object
	video
		position absolute
		top 0
		bottom 0
		left 0
		width 100%
		height 100%
		border 0

	&_21x9
		padding-bottom percentage(9 / 21)

	&_16x9
		padding-bottom percentage(9 / 16)

	&_4x3
		padding-bottom percentage(3 / 4)

	&_1x1
		padding-bottom percentage(1 / 1)
